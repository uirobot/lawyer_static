<div class="container798">

  <h1>Архив новостей</h1>


      <% @news_items.each do |news_item| %>
          <%= link_to news_item_show_path(news_item.id), :class => 'item' do %>
              <div class="date"><%= news_item.created_at.to_formatted_s(:short) %></div>
              <div class="intro"><%= news_item.title %></div>
          <% end %>
      <% end %>
</div>

<%= will_paginate @news_items, :class => 'pagination', :previous_label => 'Назад', :next_label => 'Вперёд' %>
