<%= form_for @page, html: {role: 'form'} do |form| %>
  

    <%= form.text_field :name, class: 'form-control', :placeholder => 'Заголовок новости' %>

    <%= form.text_field :permalink, class: 'form-control', :placeholder => 'Псевдоним' %>
    <span class="note">Это поле должно содержать только латинские буквы, цифры или сиволы "-" и "_"</span>

    <%= form.collection_select :parent_id, Page.order(:name), :id, :name, include_blank: false %>

    <%= form.text_area :content, class: 'form-control', :placeholder => 'Содержимое новости' %>


  
  <%= form.submit 'Опубликовать', :class => 'btn' %>
<% end %>

