<%= form_for @page, html: {role: "form"} do |form| %>
  
  <div class="form-group">
    <%= form.label "Название страницы" %>
    <%= form.text_field :name, class: "form-control" %>  
  </div>
  
  <div class="form-group">
    <%= form.label "URL" %>
    <%= form.text_field :permalink, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Контент" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :parent_id %><br />
    <%= form.collection_select :parent_id, Page.order(:name), :id, :name, include_blank: true %>
  </div>
  
  <%= form.submit 'Сохранить', :class => 'btn btn-info' %>
<% end %>