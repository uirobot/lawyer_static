.rslides {
  position: relative;
  list-style: none;
  overflow: hidden;
  height: 458px;
  width: 100%;
  padding: 0;
  margin: 0;
}

.rslides li {
  -webkit-backface-visibility: hidden;
  position: absolute;
  display: none;
  width: 100%;
  left: 0;
  top: 0;
}

.rslides li:first-child {
  position: relative;
  display: block;
  float: left;
}

.rslides img {
  display: block;
  height: auto;
  float: left;
  width: 100%;
  border: 0;
}
.rslides_tabs.rslides1_tabs {
  list-style-type: none;
  text-align: center;
  position: absolute;
  top: 520px;
  z-index: 100;
  width: 100%;
  margin: 0 0 0 -38px;
}
.rslides_tabs.rslides1_tabs li {display: inline-block;margin:0 11px;}
.rslides_tabs.rslides1_tabs li a {
  display: block;
  position: relative;
  width: 10px;
  height: 10px;
  border: 2px solid #fff;
  border-radius: 7px;
  opacity: 0.5;
  text-indent: -99999px;
}
.rslides_tabs.rslides1_tabs li.rslides_here a {
  width: 14px;
  height: 14px;
  border-radius: 8px;
  opacity: 1;
  top: -2px;
}
.rslides li .caption {
  position: absolute;
  top: 72px;
  color: #fff;
  width: 830px;
  left: 50%;
  margin-left: -471px;
  padding-right: 110px;
}
.rslides li .caption h1 {
font-size: 58px;
margin: 0 0 23px;
line-height: 56px;
}
.rslides li .caption p {
font-size: 27px;
line-height: 32px;
margin-bottom: 36px;
}
.rslides li .caption .btn.flr {
  border-radius: 0;
  background: none;
  color: #fff;
  border-right: 0;
  font-size: 18px;
  padding: 10px 11px 8px 15px;
  margin-right: 30px;
}
.rslides li .caption .btn.flr:before {
  right: -19px;
  top: 0;
  margin-top: -2px;
  width: 20px;
  height: 46px;
  background: url(<%= asset_path('flrb.png') %>) 0 0 no-repeat !important;
}



