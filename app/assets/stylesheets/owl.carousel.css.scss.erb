/* clearfix */
.owl-carousel .owl-wrapper:after {
	content: ".";
	display: block;
	clear: both;
	visibility: hidden;
	line-height: 0;
	height: 0;
}
/* display none until init */
.owl-carousel {
	display: none;
	position: relative;
	width: 100%;
	height: 458px;
	overflow: hidden;
	-ms-touch-action: pan-y;

	.item {
		height: 458px;
		img {
			width: 100%;
		}
	}
}
.owl-carousel .item .caption {
  position: absolute;
  top: 72px;
  color: #fff;
  width: 830px;
  left: 50%;
  margin-left: -471px;
  padding-right: 110px;
}
.owl-carousel .item .caption h1 {
font-size: 58px;
margin: 0 0 23px;
line-height: 56px;
}
.owl-carousel .item .caption p {
font-size: 27px;
line-height: 32px;
margin-bottom: 36px;
}
.owl-carousel .item .caption .btn.flr {
  border-radius: 0;
  background: none;
  color: #fff;
  border-right: 0;
  font-size: 18px;
  padding: 10px 11px 8px 15px;
  margin-right: 30px;
}

.owl-carousel .item .caption .btn.flr:before {
  right: -19px;
  top: 0;
  margin-top: -2px;
  width: 20px;
  height: 46px;
  background: url(<%= asset_path('flrb.png') %>) 0 0 no-repeat !important;
}
.owl-carousel .item .caption .btn.flr:hover {
  background: white;
  color: #4A4A4A;
  border-color: #4A4A4A;
}
.owl-carousel .item .caption .btn.flr:hover:before {
  background: url(<%= asset_path('flrb.png') %>) 0 -46px no-repeat !important;
}



.owl-controls {
  text-align: center;
  position: relative;
  margin: -40px 0 0 0;
  z-index: 100;
  width: 100%;
  padding: 0;

  .owl-buttons {display: none;}
  .owl-pagination {
		.owl-page {
			display: inline-block;margin:4px 11px;
			span {
			  display: block;
			  position: relative;
			  width: 10px;
			  height: 10px;
			  border: 2px solid #fff;
			  border-radius: 7px;
			  opacity: 0.5;
			  text-indent: -99999px;
			}
			&.active {
				margin:0 11px;
				span {
				  width: 14px;
				  height: 14px;
				  border-radius: 8px;
				  opacity: 1;
				  top: -2px;
				}
			}
		}

  }
}































.owl-carousel .owl-wrapper{
	display: none;
	position: relative;
	-webkit-transform: translate3d(0px, 0px, 0px);
}
.owl-carousel .owl-wrapper-outer{
	overflow: hidden;
	position: relative;
	width: 100%;
}
.owl-carousel .owl-wrapper-outer.autoHeight{
	-webkit-transition: height 500ms ease-in-out;
	-moz-transition: height 500ms ease-in-out;
	-ms-transition: height 500ms ease-in-out;
	-o-transition: height 500ms ease-in-out;
	transition: height 500ms ease-in-out;
}
	
.owl-carousel .owl-item{
	float: left;
}
.owl-controls .owl-page,
.owl-controls .owl-buttons div{
	cursor: pointer;
}
.owl-controls {
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

/* mouse grab icon */
.grabbing { 
    cursor:url(grabbing.png) 8 8, move;
}

/* fix */
.owl-carousel  .owl-wrapper,
.owl-carousel  .owl-item{
	-webkit-backface-visibility: hidden;
	-moz-backface-visibility:    hidden;
	-ms-backface-visibility:     hidden;
  -webkit-transform: translate3d(0,0,0);
  -moz-transform: translate3d(0,0,0);
  -ms-transform: translate3d(0,0,0);
}

